<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01.LesVues.Compteur" Title="Compteur">
    <ContentPage.Content>
         <StackLayout BackgroundColor="DarkCyan" Orientation="Vertical" Spacing="5"
                     HorizontalOptions="Center" VerticalOptions="Center">
            <Label x:Name="AffCompteur" Text="0"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="80" TextColor="white" />
            <Button Text="cliquenplus" WidthRequest="200" HeightRequest="80" FontSize="22"
                 Clicked="BoutonClique" CornerRadius="5"/>
            <Button Text="cliquenmoin" WidthRequest="200" HeightRequest="80" FontSize="22"
                 Clicked="BoutonClique02" CornerRadius="5"
                    Style="{StaticResource boutonLabStyle}"/>
         </StackLayout>
   </ContentPage.Content>
</ContentPage>